<\/em><\/strong><strong><em> <\/em><\/strong><strong><em>\u0411\u0440\u043e\u0434\u0441\u043a\u0438\u0439<\/em><\/strong><strong><em>. &#171;<\/em><\/strong><strong><em>\u0418<\/em><\/strong><strong><em> <\/em><\/strong><strong><em>\u0432\u0441\u044f\u043a<\/em><\/strong><strong><em> <\/em><\/strong><strong><em>\u0443\u043c\u0440\u0435\u0442<\/em><\/strong><strong><em>, <\/em><\/strong><strong><em>\u043a\u0430\u043a<\/em><\/strong><strong><em> <\/em><\/strong><strong><em>\u0441\u043c\u0435\u0440\u0442\u044c<\/em><\/strong><strong><em> <\/em><\/strong><strong><em>\u043f\u0440\u0438\u0434\u0435\u0442<\/em><\/strong><strong><em>&#187; <\/em><\/strong><strong><em>\u2014<\/em><\/strong><strong><em> <\/em><\/strong><strong><em>\u043f\u0435\u0447\u0430\u043b\u044c\u043d\u043e \u043a\u043e\u043d\u0441\u0442\u0430\u0442\u0438\u0440\u0443\u0435\u0442<\/em><\/strong><strong><em> <\/em><\/strong><strong><em>\u043d\u0430\u0440\u043e\u0434\u043d\u0430\u044f<\/em><\/strong><strong><em> <\/em><\/strong><strong><em>\u043c\u0443\u0434\u0440\u043e\u0441\u0442\u044c<\/em><\/strong><strong><em>. <\/em><\/strong><strong><em>\u0414\u0435\u0439\u0441\u0442\u0432\u0438\u0442\u0435\u043b\u044c\u043d\u043e<\/em><\/strong><strong><em>, <\/em><\/strong><strong><em>\u043b\u044e\u0431\u043e\u0439<\/em><\/strong><strong><em> <\/em><\/strong><strong><em>\u0447\u0435\u043b\u043e\u0432\u0435\u043a \u0441\u043c\u0435\u0440\u0442\u0435\u043d.<\/em><\/strong><br><\/p>\n\n\n\n<p>\u041a\u0430\u0436\u0434\u043e\u043c\u0443 \u0438\u0437 \u043d\u0430\u0441, \u043a\u0430\u043a \u044d\u0442\u043e \u043d\u0438 \u0433\u0440\u0443\u00ad\u0441\u0442\u043d\u043e, \u0442\u043e\u0436\u0435 \u043d\u0435 \u0438\u0437\u0431\u0435\u0436\u0430\u0442\u044c \u0441\u043a\u043e\u0440\u0431\u043d\u043e\u0433\u043e \u043c\u043e\u00ad\u043c\u0435\u043d\u0442\u0430. \u0423\u043c\u0438\u0440\u0430\u044e\u0442 \u0440\u043e\u0434\u0441\u0442\u0432\u0435\u043d\u043d\u0438\u043a\u0438, \u0434\u0440\u0443\u0437\u044c\u044f, \u0437\u043d\u0430\u043a\u043e\u043c\u044b\u0435&#8230; \u0423 \u0432\u0430\u0441 \u0433\u043e\u0440\u0435, \u0432\u044b \u0445\u043e\u0442\u0438\u0442\u0435 \u043a\u0430\u043a \u043c\u043e\u0436\u043d\u043e \u0434\u043e\u0441\u0442\u043e\u0439\u043d\u0435\u0435 \u043f\u0440\u043e\u0432\u043e\u0434\u0438\u0442\u044c \u0432 \u043f\u043e\u0441\u043b\u0435\u0434\u043d\u0438\u0439 \u043f\u0443\u0442\u044c \u0431\u043b\u0438\u0437\u043a\u043e\u0433\u043e \u0447\u0435\u043b\u043e\u0432\u0435\u043a\u0430. \u041c\u043d\u043e\u0433\u0438\u043c \u043f\u0430\u043c\u044f\u0442\u043d\u044b \u0433\u043e\u0441\u0443\u0434\u0430\u0440\u0441\u0442\u0432\u0435\u043d\u043d\u044b\u0435 \u043f\u043e\u00ad\u0445\u043e\u0440\u043e\u043d\u043d\u044b\u0435 \u0443\u0441\u043b\u0443\u0433\u0438 &#8212;\n\u043c\u043d\u043e\u0433\u043e\u0447\u0430\u0441\u043e\u0432\u044b\u0435 \u043e\u0447\u0435\u00ad\u0440\u0435\u0434\u0438 \u0437\u0430 \u043e\u0431\u044b\u043a\u043d\u043e\u0432\u0435\u043d\u043d\u044b\u043c\u0438 \u0433\u0440\u043e\u0431\u0430\u043c\u0438, \u0431\u0435\u00ad\u0433\u043e\u0442\u043d\u044f \u043f\u043e \u043a\u043e\u043d\u0442\u043e\u0440\u0430\u043c \u0437\u0430 \u043d\u0443\u0436\u043d\u044b\u043c\u0438 \u0431\u0443\u043c\u0430\u0433\u0430\u00ad\u043c\u0438, \u043f\u0440\u0435\u0440\u0435\u043a\u0430\u043d\u0438\u044f \u0441 \u0432\u0435\u0447\u043d\u043e \u043f\u044c\u044f\u043d\u044b\u043c\u0438 \u043f\u043e\u00ad\u0445\u043e\u0440\u043e\u043d\u043d\u044b\u043c\u0438 \u0431\u0440\u0438\u0433\u0430\u0434\u0430\u043c\u0438 \u0438\u0437\u0437\u0430 \u043b\u0438\u0448\u043d\u0435\u0439 \u0431\u0443\u0442\u044b\u043b\u043a\u0438 \u0432\u043e\u0434\u043a\u0438&#8230; \u041a \u043e\u0441\u0442\u0440\u043e\u0439\n\u0434\u0443\u0448\u0435\u0432\u043d\u043e\u0439 \u0431\u043e\u043b\u0438 \u0434\u043e\u0431\u0430\u0432\u043b\u044f\u043b\u0438\u0441\u044c \u043d\u0435\u0440\u0432\u043d\u043e\u0435 \u043d\u0430\u043f\u0440\u044f\u0436\u0435\u00ad\u043d\u0438\u0435, \u043e\u0442\u0447\u0430\u044f\u043d\u0438\u0435,\n\u043b\u0435\u043a\u0430\u0440\u0441\u0442\u0432\u0430, \u043e\u043f\u0443\u0441\u0442\u0438\u0432\u0448\u0438\u00ad\u0435\u0441\u044f \u0440\u0443\u043a\u0438.<\/p>\n\n\n\n<p>\u0412 \u043d\u044b\u043d\u0435\u0448\u043d\u0435\u0435 \u0432\u0440\u0435\u043c\u044f \u0432 \u0421\u0430\u0440\u0430\u0442\u043e\u0432\u0435 \u043c\u043d\u043e\u0433\u0438\u0435 \u043f\u043e\u0433\u0440\u0435\u0431\u0430\u043b\u044c\u043d\u044b\u0435 \u043f\u0440\u043e\u0431\u043b\u0435\u043c\u044b \u0440\u0435\u00ad\u0448\u0430\u044e\u0442\u0441\u044f \u0441\u043f\u0435\u0446\u0438\u0430\u043b\u0438\u0437\u0438\u0440\u043e\u0432\u0430\u043d\u043d\u044b\u043c\u0438\n\u043f\u0440\u0435\u0434\u043f\u0440\u0438\u044f\u0442\u0438\u044f\u043c\u0438 \u043e\u0431\u0440\u044f\u0434\u043e\u0432\u044b\u0445 \u0443\u0441\u043b\u0443\u0433. \u0411\u0435\u0437\u0443\u0441\u043b\u043e\u0432\u00ad\u043d\u044b\u043c \u043b\u0438\u0434\u0435\u0440\u043e\u043c \u0441\u0440\u0435\u0434\u0438 \u043d\u0438\u0445 \u044f\u0432\u043b\u044f\u0435\u0442\u0441\u044f \u041c\u041f &#171;\u041d\u0410\u0422\u0420\u041e\u041c&#187;<\/p>\n\n\n\n<p>\u0412 \u044d\u0442\u043e\u043c \u0433\u043e\u0434\u0443 &#171;\u041d\u0430\u0442\u0440\u043e\u043d\u0443&#187; \u0438\u0441\u043f\u043e\u043b\u00ad\u043d\u0438\u043b\u043e\u0441\u044c 10 \u043b\u0435\u0442. \u0412\u043e \u0433\u043b\u0430\u0432\u0435 \u043f\u0440\u0435\u0434\u043f\u0440\u0438\u044f\u0442\u0438\u044f \u0441\u0442\u043e\u0438\u0442 \u0410\u043b\u0435\u043a\u0441\u0430\u043d\u0434\u0440\n\u0411\u043e\u0440\u0438\u0441\u043e\u0432\u0438\u0447 \u0413\u0430\u0439\u0432\u043e\u0440\u043e\u043d\u0441\u043a\u0438\u0439. \u0422\u0435\u0440\u0430\u043f\u0435\u0432\u0442, \u0440\u0430\u0431\u043e\u0442\u0430\u0432\u0448\u0438\u0439 \u0432 \u0441\u0432\u043e\u0435 \u0432\u0440\u0435\u043c\u044f \u0438\u043d\u0441\u043f\u0435\u043a\u0442\u043e\u0440\u043e\u043c\n\u0432\u0440\u0430\u0447\u0435\u0431\u043d\u043e-\u0441\u0430\u043d\u0438\u0442\u0430\u0440\u043d\u043e\u0439 \u0441\u043b\u0443\u0436\u0431\u044b \u041f\u0440\u0438\u0432\u043e\u043b\u0436\u0441\u043a\u043e\u0439 \u0436\u0435\u043b\u0435\u0437\u043d\u043e\u0439 \u0434\u043e\u0440\u043e\u0433\u0438, \u0437\u0430\u0442\u0435\u043c \u0437\u0430\u0432\u0435\u0434\u0443\u044e\u0449\u0438\u043c\n\u0430\u043c\u0431\u0443\u043b\u0430\u0442\u043e\u0440\u0438\u0435\u0439 \u043f\u0440\u0438 \u0436\u0435\u043b\u0435\u0437\u043d\u043e\u0434\u043e\u0440\u043e\u0436\u043d\u043e\u0439 \u0431\u043e\u043b\u044c\u043d\u0438\u0446\u0435, \u0432 1987 \u0433\u043e\u0434\u0443, \u043f\u043e\u0441\u043b\u0435 \u0432\u044b\u0445\u043e\u0434\u0430 \u0437\u0430\u043a\u043e\u043d\u0430 \u043e \u0440\u0430\u0437\u0440\u0435\u0448\u0435\u00ad\u043d\u0438\u0438 \u0418\u0422\u0414, \u0440\u0435\u0448\u0438\u043b \u043f\u043e\u043f\u0440\u043e\u0431\u043e\u0432\u0430\u0442\u044c \u0441\u0435\u0431\u044f \u0432 \u0441\u043e\u0437\u0434\u0430\u043d\u0438\u0438 \u043f\u043e\u0445\u043e\u0440\u043e\u043d\u043d\u043e\u0439\n\u0441\u043b\u0443\u0436\u0431\u044b \u043d\u043e\u0432\u043e\u0433\u043e \u043e\u0431\u0440\u0430\u0437\u0446\u0430. \u041e\u043d \u043d\u0430\u0448\u0435\u043b \u043c\u043d\u043e\u0433\u043e \u043e\u0431\u0449\u0435\u0433\u043e \u043c\u0435\u0436\u00ad\u0434\u0443 \u043c\u0435\u0434\u0438\u0446\u0438\u043d\u043e\u0439 \u0438 \u043f\u0435\u0447\u0430\u043b\u044c\u043d\u043e\u0439 \u0440\u0430\u0431\u043e\u0442\u043e\u0439 \u043f\u043e \u043e\u043a\u0430\u0437\u0430\u043d\u0438\u044e \u043f\u043e\u0445\u043e\u0440\u043e\u043d\u043d\u044b\u0445 \u0443\u0441\u043b\u0443\u0433 &#8212; \u0438 \u0442\u0430\u043c, \u0438 \u0437\u0434\u0435\u0441\u044c \u0432\u0441\u0435\n\u043e\u0441\u043d\u043e\u0432\u044b\u0432\u0430\u0435\u0442\u0441\u044f \u043d\u0430 \u043c\u0438\u043b\u043e\u0441\u0435\u0440\u0434\u0438\u0438. \u0421\u0435\u0439\u0447\u0430\u0441 \u0441\u043f\u0438\u0441\u043e\u043a \u0443\u0441\u043b\u0443\u0433, \u043f\u0440\u0435\u0434\u043e\u0441\u0442\u0430\u0432\u00ad\u043b\u044f\u0435\u043c\u044b\u0445 &#171;\u041d\u0430\u0442\u0440\u043e\u043d\u043e\u043c&#187;, \u043d\u0430\u0441\u0447\u0438\u0442\u044b\u0432\u0430\u0435\u0442 \u0431\u043e\u043b\u0435\u0435 20 \u043f\u0443\u043d\u043a\u0442\u043e\u0432. \u0421\u0440\u0435\u0434\u0438 \u043d\u0438\u0445 \u043d\u0435 \u0442\u043e\u043b\u044c\u043a\u043e \u043e\u0431\u00ad\u0440\u044f\u0434\u043e\u0432\u044b\u0435 \u0434\u0435\u0439\u0441\u0442\u0432\u0438\u044f, \u043d\u043e \u0438 \u043e\u0431\u0441\u043b\u0443\u0436\u0438\u0432\u0430\u043d\u0438\u0435 \u043f\u043e\u043c\u0438\u043d\u0430\u043b\u044c\u043d\u044b\u0445 \u043e\u0431\u0435\u0434\u043e\u0432, \u0437\u0430\u043a\u0430\u0437 \u0446\u0435\u0440\u043a\u043e\u0432\u043d\u043e-\u043e\u0431\u0440\u044f\u0434\u043e\u0432\u044b\u0445 \u0446\u0435\u0440\u0435\u043c\u043e\u043d\u0438\u0439 \u043f\u043e \u0441\u043e\u0433\u043b\u0430\u0441\u043e\u0432\u0430\u00ad\u043d\u0438\u044e \u0441 \u0434\u0443\u0445\u043e\u0432\u043d\u044b\u043c\u0438 \u0443\u0447\u0440\u0435\u0436\u0434\u0435\u043d\u0438\u044f\u043c\u0438.<\/p>\n\n\n\n<p>\u0412 \u0438\u0441\u0442\u043e\u0440\u0438\u0438 &#171;\u041d\u0430\u0442\u0440\u043e\u043d\u0430&#187; \u0431\u044b\u0432\u0430\u043b\u0438 \u0438 \u043f\u043e\u0431\u0435\u0434\u044b,\n\u0438 \u0442\u0440\u0443\u0434\u043d\u044b\u0435 \u043f\u0435\u0440\u0438\u043e\u0434\u044b, \u0438\u0441\u043f\u044b\u0442\u0430\u00ad\u043d\u0438\u044f \u043d\u0430 \u0432\u044b\u0436\u0438\u0432\u0430\u0435\u043c\u043e\u0441\u0442\u044c. \u0412\n1990 \u0433\u043e\u0434\u0443 \u0431\u043b\u0430\u0433\u043e\u0434\u0430\u0440\u044f \u043f\u043e\u0434\u0434\u0435\u0440\u0436\u043a\u0435 \u0414. \u0424. \u0410\u044f\u0446\u043a\u043e\u0432\u0430, \u043a\u043e\u00ad\u0442\u043e\u0440\u044b\u0439 \u0442\u043e\u0433\u0434\u0430\n\u0431\u044b\u043b \u0432\u0438\u0446\u0435-\u043c\u044d\u0440\u043e\u043c \u0433\u043e\u0440\u043e\u0434\u0430, &#171;\u041d\u0430\u0442\u0440\u043e\u043d&#187; \u043f\u043e\u043b\u0443\u0447\u0438\u043b \u043f\u043e\u043c\u0435\u0449\u0435\u043d\u0438\u0435, \u0438 pa\u0431\u043e\u0442\u0430 \u043f\u0440\u0438\u043e\u0431\u0440\u0435\u043b\u0430 \u0441\u0442\u0430\u0431\u0438\u043b\u044c\u043d\u044b\u0439 \u0445\u0430\u0440\u0430\u043a\u0442\u0435\u0440.<\/p>\n\n\n\n<p>\u0421\u043e\u0447\u0443\u0432\u0441\u0442\u0432\u0438\u0435,\n\u043f\u043e\u0434\u0434\u0435\u0440\u0436\u043a\u0430, \u0441\u043e\u043f\u0435\u00ad\u0440\u0435\u0436\u0438\u0432\u0430\u043d\u0438\u0435 \u2014 \u0442\u0440\u0438 \u0441\u043b\u043e\u0432\u0430, \u043a\u043e\u0442\u043e\u0440\u044b\u0435 \u0441\u0442\u0430\u043b\u0438 \u043e\u0441\u043d\u043e\u0432\u043d\u044b\u043c\n\u043f\u0440\u0438\u043d\u0446\u0438\u043f\u043e\u043c \u043e\u0431\u0449\u0435\u043d\u0438\u044f \u0441 \u0437\u0430\u043a\u0430\u0437\u0447\u0438\u043a\u043e\u043c. \u0410. \u0411. \u0413\u0430\u0439\u0432\u043e\u0440\u043e\u043d\u0441\u043a\u0438\u0439 \u043b\u044e\u0431\u0438\u0442 \u043f\u043e\u00ad\u0432\u0442\u043e\u0440\u044f\u0442\u044c, \u043e\u0431\u0440\u0430\u0449\u0430\u044f\u0441\u044c \u043a \u0441\u043e\u0442\u0440\u0443\u0434\u043d\u0438\u043a\u0430\u043c: &#171;\u041e\u0442\u00ad\u043d\u043e\u0448\u0435\u043d\u0438\u0435 \u043a \u043a\u043b\u0438\u0435\u043d\u0442\u0443 \u0434\u043e\u043b\u0436\u043d\u043e \u0431\u044b\u0442\u044c \u043a\u0430\u043a \u043a \u0431\u043b\u0438\u0437\u043a\u043e\u043c\u0443 \u0440\u043e\u0434\u0441\u0442\u0432\u0435\u043d\u043d\u0438\u043a\u0443&#187;. \u0412 \u043a\u043e\u043c\u043f\u043b\u0435\u043a\u0441 \u0443\u0441\u043b\u0443\u0433 \u0432\u0445\u043e\u0434\u0438\u0442 \u0438 \u0442\u0430\u043a\u0430\u044f: \u043f\u0440\u0438\u0436\u0438\u0437\u043d\u0435\u043d\u043d\u043e\u0435 \u0437\u0430\u043a\u043b\u044e\u0447\u0435\u043d\u0438\u0435 \u0434\u043e\u0433\u043e\u0432\u043e\u0440\u0430 \u043d\u0430 \u043f\u043e\u0445\u043e\u0440\u043e\u043d\u044b. \u0414\u043b\u044f \u043e\u0434\u0438\u043d\u043e\u043a\u043e\u0433\u043e\n\u0438 \u043f\u043e\u0436\u0438\u043b\u043e\u0433\u043e \u0447\u0435\u043b\u043e\u0432\u0435\u043a\u0430 \u044d\u0442\u043e \u043d\u0430\u0441\u0442\u043e\u044f\u0449\u0435\u0435 \u0431\u043b\u0430\u0433\u043e. \u0414\u043e\u0433\u043e\u0432\u043e\u0440 \u0432\u0441\u0442\u0443\u043f\u0430\u0435\u0442 \u0432 \u0441\u0438\u043b\u0443 \u043f\u043e\u0441\u043b\u0435 \u0432\u044b\u043f\u043b\u0430\u0442\u044b, \u0438 \u043d\u0438\u043a\u0430\u043a\u0430\u044f \u0438\u043d\u0444\u043b\u044f\u0446\u0438\u044f \u043d\u0435 \u043c\u043e\u0436\u0435\u0442 \u0435\u0433\u043e \u043d\u0430\u0440\u0443\u0448\u0438\u0442\u044c. &#171;\u041d\u0438\u0447\u0435\u0433\u043e \u043d\u0435 \u043d\u0430\u0434\u043e \u0431\u0443\u0434\u0435\u0442 \u0434\u043e\u043f\u043b\u0430\u0447\u0438\u0432\u0430\u0442\u044c?&#187; &#8212; \u0440\u043e\u0431\u043a\u043e \u0438\u043d\u00ad\u0442\u0435\u0440\u0435\u0441\u0443\u044e\u0442\u0441\u044f \u0441\u0442\u0430\u0440\u0443\u0448\u043a\u0438. &#171;\u0427\u0442\u043e \u0432\u044b, \u0436\u0438\u0432\u0438\u0442\u0435 \u0435\u0449\u0435 \u0441\u0442\u043e \u043b\u0435\u0442, \u0436\u0435\u043b\u0430\u0435\u043c \u0432\u0430\u043c \u0437\u0434\u043e\u0440\u043e\u0432\u044c\u044f \u0438 \u0441\u0447\u0430\u00ad\u0441\u0442\u044c\u044f, \u0430 \u0437\u0430 \u0442\u043e, \u043a\u0430\u043a\n\u0432\u0430\u0441 \u0431\u0443\u0434\u0443\u0442 \u043f\u0440\u043e\u0432\u043e\u0436\u0430\u0442\u044c \u0432 \u043f\u043e\u0441\u043b\u0435\u0434\u043d\u0438\u0439 \u043f\u0443\u0442\u044c, \u043c\u043e\u0436\u0435\u0442\u0435 \u043d\u0435 \u0431\u0435\u0441\u043f\u043e\u043a\u043e\u00ad\u0438\u0442\u044c\u0441\u044f&#187;.<\/p>\n\n\n\n<p>\u041e\u0434\u043d\u0430 \u043c\u043e\u044f \u0437\u043d\u0430\u043a\u043e\u043c\u0430\u044f, \u043c\u043e\u043b\u043e\u0434\u0430\u044f \u0434\u0435\u0432\u0443\u0448\u043a\u0430, \u043f\u0440\u043e\u0436\u0438\u0432\u0430\u043b\u0430 \u0432 \u043a\u043e\u043c\u043c\u0443\u043d\u0430\u043b\u044c\u043d\u043e\u0439 \u043a\u0432\u0430\u0440\u0442\u0438\u0440\u0435. \u0415\u0434\u0438\u043d\u0441\u0442\u0432\u0435\u043d\u043d\u044b\u043c \u0441\u043e\u0441\u0435\u0434\u043e\u043c \u0431\u044b\u043b \u0431\u043e\u043b\u044c\u043d\u043e\u0439 \u043e\u0434\u0438\u043d\u043e\u043a\u0438\u0439 \u0441\u0442\u0430\u0440\u0438\u043a. \u041e\u0434\u043d\u0430\u0436\u0434\u044b \u042d\u0422\u041e \u0441\u043b\u0443\u0447\u0438\u043b\u043e\u0441\u044c. \u0414\u0435\u0432\u0443\u0448\u043a\u0430 \u0440\u0430\u0441\u0442\u0435\u0440\u044f\u043b\u0430\u0441\u044c. \u041a\u0440\u043e\u043c\u0435 \u0437\u043d\u0430\u043a\u043e\u043c\u043e\u0433\u043e \u043c\u043d\u043e\u0433\u0438\u043c\n\u0438\u0437 \u043d\u0430\u0441 \u0441\u0442\u0440\u0430\u00ad\u0445\u0430 \u043f\u0435\u0440\u0435\u0434 \u043f\u043e\u043a\u043e\u0439\u043d\u0438\u043a\u043e\u043c \u043e\u043d\u0430 \u0438\u0441\u043f\u044b\u0442\u0430\u043b\u0430 \u0431\u043e\u044f\u0437\u043d\u044c \u0434\u0440\u0443\u0433\u043e\u0433\u043e \u0440\u043e\u0434\u0430: \u043d\u0435\u0437\u043d\u0430\u043d\u0438\u0435, \u0447\u0442\u043e \u0436\u0435 \u0434\u0435\u043b\u0430\u0442\u044c \u0432 \u0442\u0430\u043a\u0438\u0445 \u0441\u043b\u0443\u0447\u0430\u044f\u0445. \u041d\u0430 \u0433\u043b\u0430\u0437\u0430 \u043f\u043e\u043f\u0430\u00ad\u043b\u0430\u0441\u044c \u0433\u0430\u0437\u0435\u0442\u0430 \u0441\n\u0440\u0435\u043a\u043b\u0430\u043c\u043e\u0439 &#171;\u041d\u0430\u0442\u0440\u043e\u043d\u0430&#187;. \u0411\u044b\u043b\u0430 \u043d\u043e\u0447\u044c,\n\u043f\u043e\u0434\u0443\u043c\u0430\u043b\u043e\u0441\u044c: \u043a\u0442\u043e \u043c\u043e\u0436\u0435\u0442 \u043e\u0442\u0432\u0435\u0442\u0438\u0442\u044c \u043f\u043e \u0442\u0435\u043b\u0435\u0444\u043e\u043d\u0443 \u0432 \u0442\u0430\u043a\u043e\u0435 \u0432\u0440\u0435\u043c\u044f? \u041e\u0442\u0432\u0435\u0442\u0438\u043b \u0441\u043f\u043e\u043a\u043e\u0439\u043d\u044b\u0439, \u0434\u043e\u0431\u0440\u043e\u0436\u0435\u043b\u0430\u0442\u0435\u043b\u044c\u043d\u044b\u0439 \u0433\u043e\u043b\u043e\u0441. &#171;\u0413\u043b\u0430\u0432\u043d\u043e\u0435 \u2014 \u043d\u0435 \u043f\u0430\u043d\u0438\u043a\u0443\u0439\u0442\u0435, \u043f\u043e\u0438\u0449\u0438\u0442\u0435 \u0434\u043e\u00ad\u043a\u0443\u043c\u0435\u043d\u0442\u044b, \u0434\u0435\u043d\u044c\u0433\u0438. \u0415\u0441\u043b\u0438 \u043d\u0435 \u043d\u0430\u0439\u0434\u0435\u0442\u0435 \u043d\u0443\u0436\u00ad\u043d\u0443\u044e \u0441\u0443\u043c\u043c\u0443, \u043d\u0435 \u043f\u0435\u0440\u0435\u0436\u0438\u0432\u0430\u0439\u0442\u0435, \u043c\u044b \u0432\u0441\u0435 \u0440\u0430\u0432\u043d\u043e \u0441\u0434\u0435\u043b\u0430\u0435\u043c \u0432\u0441\u0435 \u043d\u0435\u043e\u0431\u0445\u043e\u0434\u0438\u043c\u043e\u0435, \u043e\u0444\u043e\u0440\u043c\u0438\u043c \u0431\u0443\u043c\u0430\u0433\u0438, \u043e\u0431\u043c\u043e\u0435\u043c,\n\u043e\u0434\u0435\u043d\u0435\u043c, \u0443\u043b\u043e\u0436\u0438\u043c \u0432 \u0433\u0440\u043e\u0431, \u043f\u043e\u0445\u043e\u0440\u043e\u043d\u0438\u043c. \u0416\u0434\u0438\u0442\u0435, \u043f\u0440\u0438\u0435\u0434\u0435\u043c\n\u0442\u043e\u0433\u0434\u0430-\u0442\u043e&#187;. \u0412\u0441\u0435 \u0431\u044b\u043b\u043e \u0441\u0434\u0435\u043b\u0430\u043d\u043e \u0434\u043e\u0441\u0442\u043e\u0439\u043d\u043e, \u0431\u044b\u0441\u0442\u0440\u043e, \u0441 \u0442\u0430\u043a\u0442\u043e\u043c \u0438 \u0443\u0432\u0430\u0436\u0435\u043d\u0438\u00ad\u0435\u043c. \u0412\u044b\u043f\u043b\u0430\u0447\u0435\u043d\u043d\u0430\u044f \u0441\u0443\u043c\u043c\u0430 \u0431\u044b\u043b\u0430 \u0433\u043e\u0440\u0430\u0437\u0434\u043e \u043c\u0435\u043d\u044c\u0448\u0435 \u0442\u043e\u0439, \u043a\u043e\u0442\u043e\u0440\u0443\u044e \u043f\u0440\u0435\u0434\u043f\u043e\u043b\u0430\u0433\u0430\u043b \u043f\u0440\u0435\u0439\u0441\u043a\u0443\u0440\u0430\u043d\u0442.<\/p>\n\n\n\n<p>\u0410 \u0432\u043e\u0442 \u043d\u0435\u043a\u043e\u0442\u043e\u0440\u044b\u0435 \u0438\u0437 \u043e\u0442\u0437\u044b\u0432\u043e\u0432 \u043e \u0440\u0430\u0431\u043e\u0442\u0435 &#171;\u041d\u0430\u0442\u0440\u043e\u043d\u0430&#187;.<\/p>\n\n\n\n<p><em>&#187;\u0411\u043b\u0430\u0433\u043e\u0434\u0430\u0440\u043d\u043e\u0441\u0442\u044c \u043e\u0442 \u0432\u0441\u0435\u0439 \u0434\u0443\u0448\u0438! \u041d\u0435 \u043c\u043e\u0433\u0443 \u0437\u0430\u0431\u044b\u0442\u044c \u0432\u0430\u0448 \u043a\u043e\u043b\u043b\u0435\u043a\u0442\u0438\u0432 \u0437\u0430 \u043f\u043e\u0440\u044f\u0434\u043e\u0447\u00ad\u043d\u043e\u0441\u0442\u044c, \u043e\u0442\u0441\u0443\u0442\u0441\u0442\u0432\u0438\u0435\n\u0432\u044b\u043c\u043e\u0433\u0430\u0442\u0435\u043b\u044c\u0441\u0442\u0432\u0430, \u0442\u0430\u043a\u0442. \u041f\u043e\u0431\u043e\u043b\u044c\u0448\u0435 \u0431\u044b\u043b\u043e \u0431\u044b \u0442\u0430\u043a\u0438\u0445 \u043e\u0440\u0433\u0430\u043d\u0438\u0437\u0430\u0446\u0438\u0439. \u041a\u043e\u0441\u0442\u043e\u0447\u043a\u0438\u043d\u0430 \u0412.\n\u0413&#187;.<\/em><\/p>\n\n\n\n<p><em>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; &#171;\u041c\u044b \u0441\u0435\u0440\u0434\u0435\u0447\u043d\u043e \u0431\u043b\u0430\u0433\u043e\u0434\u0430\u0440\u0438\u043c \u0437\u0430\n\u0441\u043e\u0447\u0443\u0432\u0441\u0442\u0432\u0438\u0435, \u0431\u043b\u0430\u0433\u043e\u0440\u043e\u0434\u0441\u0442\u0432\u043e \u0438 \u043c\u0438\u043b\u043e\u0441\u0435\u0440\u0434\u0438\u0435. \u042d\u0442\u043e \u0432\u0441\u0435\u043b\u044f\u0435\u0442 \u0432 \u043d\u0430\u0441, \u0432\u0435\u0442\u0435\u0440\u0430\u043d\u043e\u0432 \u0432\u043e\u0439\u00ad\u043d\u044b,\n\u043d\u0430\u0434\u0435\u0436\u0434\u0443 \u043d\u0430 \u043f\u043e\u043c\u043e\u0449\u044c \u0432 \u0442\u0440\u0443\u0434\u043d\u0443\u044e \u043c\u0438\u00ad\u043d\u0443\u0442\u0443. \u0410. \u041f\u043b\u0430\u043a\u0441\u0438\u043d (\u043f\u043e \u043f\u043e\u0440\u0443\u0447\u0435\u043d\u0438\u044e \u0433\u0440\u0443\u043f\u043f\u044b \u0432\u0435\u0442\u0435\u0440\u0430\u043d\u043e\u0432\n\u0432\u043e\u0439\u043d\u044b)&#187;<\/em><\/p>\n\n\n\n<p>\u0410\u043b\u0435\u043a\u0441\u0435\u0439 \u041c\u0418\u0425\u0410\u0419\u041b\u041e\u0412<\/p>\n\n\n\n<p>15.08.97\u0433. \u00ab\u0420\u0435\u043a\u043b\u0430\u043c\u0430 \u043d\u0435\u0434\u0435\u043b\u0438\u00bb \u211633 (1169)<\/p>\n","protected":false},"excerpt":{"rendered":"<p>&#171;\u0412\u044b \u0437\u0430\u043c\u0435\u0442\u0438\u043b\u0438, \u0447\u0435\u043c \u0432\u0441\u0435\u0433\u0434\u0430 \u0437\u0430\u043a\u0430\u043d\u0447\u0438\u0432\u0430\u0435\u0442\u0441\u044f \u0436\u0438\u0437\u043d\u044c?&#187; \u2014 \u0441 \u0438\u0437\u044f\u0449\u00ad\u043d\u044b\u043c \u0447\u0435\u0440\u043d\u044b\u043c \u044e\u043c\u043e\u0440\u043e\u043c \u043a\u0430\u043a&#8212;\u0442\u043e \u043f\u043e\u0438\u043d\u0442\u0435\u0440\u0435\u0441\u043e\u0432\u0430\u043b\u0441\u044f \u0443 \u0441\u0432\u043e\u0438\u0445 \u0434\u0440\u0443\u0437\u0435\u0439 \u0418\u043e\u0441\u0438\u0444 \u0411\u0440\u043e\u0434\u0441\u043a\u0438\u0439. &#171;\u0418 \u0432\u0441\u044f\u043a \u0443\u043c\u0440\u0435\u0442, \u043a\u0430\u043a \u0441\u043c\u0435\u0440\u0442\u044c \u043f\u0440\u0438\u0434\u0435\u0442&#187; \u2014 \u043f\u0435\u0447\u0430\u043b\u044c\u043d\u043e \u043a\u043e\u043d\u0441\u0442\u0430\u0442\u0438\u0440\u0443\u0435\u0442 \u043d\u0430\u0440\u043e\u0434\u043d\u0430\u044f \u043c\u0443\u0434\u0440\u043e\u0441\u0442\u044c. \u0414\u0435\u0439\u0441\u0442\u0432\u0438\u0442\u0435\u043b\u044c\u043d\u043e, \u043b\u044e\u0431\u043e\u0439 \u0447\u0435\u043b\u043e\u0432\u0435\u043a \u0441\u043c\u0435\u0440\u0442\u0435\u043d. \u041a\u0430\u0436\u0434\u043e\u043c\u0443 \u0438\u0437 \u043d\u0430\u0441, \u043a\u0430\u043a \u044d\u0442\u043e \u043d\u0438 \u0433\u0440\u0443\u00ad\u0441\u0442\u043d\u043e, \u0442\u043e\u0436\u0435 \u043d\u0435 \u0438\u0437\u0431\u0435\u0436\u0430\u0442\u044c \u0441\u043a\u043e\u0440\u0431\u043d\u043e\u0433\u043e \u043c\u043e\u00ad\u043c\u0435\u043d\u0442\u0430. \u0423\u043c\u0438\u0440\u0430\u044e\u0442 \u0440\u043e\u0434\u0441\u0442\u0432\u0435\u043d\u043d\u0438\u043a\u0438, \u0434\u